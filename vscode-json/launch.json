    "version": "0.2.0",
    "configurations": [
        {
            "name": "C/C++: clang++ build and debug active file", // Descriptive Title
            "type": "cppdbg", 
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [  // command line arguments
                //"< debuginput.txt" 
            ], 
            "stopAtEntry": true, // Pause upon entering main()
            "cwd": "${workspaceFolder}", // Establish current working directory
            "environment": [],
            "externalConsole": false, // External console? (buggy ish on macos)
            "MIMode": "lldb", // Either lldb or gdb
            "preLaunchTask": "C/C++: clang++ build active file" // Label of build task in tasks.json
        }
    ]
}
