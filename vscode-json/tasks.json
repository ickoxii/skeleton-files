{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file", // Descriptive Title
            "command": "/usr/bin/clang++", // path to command
            "args": [ // various command line arguments for compiler
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",  // cpp files to compile
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}", // executable name
                "--std=c++17"
            ],
            "options": {
                "cwd": "${fileDirname}" // Establish current working directory
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger." // Description/Information
        }
    ],
    "version": "2.0.0"
}
